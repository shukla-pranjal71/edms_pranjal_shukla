# Development Environment Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration
DB_PATH=./data/documents.db
DB_CONNECTION_LIMIT=10
DB_TIMEOUT=30000
DB_ENABLE_FOREIGN_KEYS=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-development-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_ATTEMPTS=5

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5000

# Email Configuration
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@sopmanager.com

# Upload Configuration
UPLOAD_MAX_FILE_SIZE=52428800
UPLOAD_MAX_FILES=5
UPLOAD_USE_S3=false
UPLOAD_DESTINATION=./uploads

# AWS S3 Configuration (if using S3)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Feature Flags
FEATURE_FILE_UPLOADS=true
FEATURE_EMAIL_NOTIFICATIONS=false
FEATURE_AUDIT_LOGGING=true
FEATURE_RATE_LIMITING=true

# Logging Configuration
LOG_LEVEL=debug
LOG_ENABLE_CONSOLE=true
LOG_INCLUDE_RESPONSE_DATA=false
LOG_SLOW_REQUEST_THRESHOLD=2000
